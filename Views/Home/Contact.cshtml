                  <input class="form=control"type="text" id="inputphn" placeholder="Phone No" required>
                </div>
              </div>
              <div class="control-group">
                <div class="controls">
                  <textarea id="inputMessage" placeholder="Message" required="required"></textarea>
                </div>
              </div>
              <div class="control-group">
                <div class="controls ">
                  <input type="submit" class="btn btn-primary btn-large " value="Send Message">
                </div>
              </div>
            </form>
          </div>
        </div>
