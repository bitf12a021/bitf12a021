<!-- Modal Login -->

  <div class="modal fade" id="login" role="dialog" >

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal">&times;</button>

        <h4 class="modal-title" style="color:darkblue">Login</h4>
          <div class="modal-footer"></div>
             <form action="/Home/Validate" method="post">
             <div class="form-group">
                 <h4 style="color:deepskyblue">Username:</h4>
                 <input type="text" class="form-control"  name="uname" required="required">
             </div>
             <div class="form-group">
                  <h4  style="color:deepskyblue">Password:</h4>
                  <input type="password" class="form-control"  name="password" required="required">
            </div>
                 <button type="submit" class="btn btn-info"  >Login</button>
                 <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
             
          </form>
       </div>
      </div>
     
    </div>

 
