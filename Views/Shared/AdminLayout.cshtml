<script type="text/javascript">
         $(document).ready(function () {
             $("#modSelector").change(function () {
                 var countryId = $("#modSelector").val();
                 //alert(countryId);
                 $("#ProductSelctor option").remove();


                 $.getJSON("/Product/GetProduct?id=" + countryId, function (data) {
                     $("#ProductSelctor").append('<option>-Select Product-</option>');
                     $.each(data, function (i, item) {
                         $("#ProductSelctor").append('<option value=' + item.ProductName + '>' + item.ProductName + '</option>');
                         //alert('Id = ' + item.Id + " Name = " + item.Name);
                     });

                 });

             });

         });
</script>

