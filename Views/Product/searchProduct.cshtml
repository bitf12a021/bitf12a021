@{
    ViewBag.Title = "searchProduct";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}


    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
     @Scripts.Render("~/bundles/jquery")
     <script type="text/javascript">
         $(document).ready(function () {
             $("#modSelector").change(function () {
                 var countryId = $("#modSelector").val();
                 //alert(countryId);
                 $("#ProductSelctor option").remove();


                 $.getJSON("/Product/GetProduct?id=" + countryId, function (data) {
                     $("#ProductSelctor").append('<option>-Select Product-</option>');
                     $.each(data, function (i, item) {
                         $("#ProductSelctor").append('<option value=' + item.ProductName + '>' + item.ProductName + '</option>');
                         //alert('Id = ' + item.Id + " Name = " + item.Name);
                     });

                 });

             });

         });
</script>

<body>
    <div class="page-header">
          <h1><font color="lightblue">Search Product</font></h1>
</div>
    <div align="center">
      
        
      <font color="lightblue" size="5">
<div class="form-group">
      <div>
          
          <label><h4>Select Catagory</h4></label></div>
          <div>
     <select id="modSelector" name="mod">
  <option value="0">-Select catagory-</option>
          <option value="mobile">mobile</option>
      <option value="Laptop">Laptop</option>
      <option value="camera">Camera</option>
      <option value="usb">Usbs</option>

  
   </select>
              </div>
              </div>
              <form action="/Product/seeDetail" method="post">
                  <div>
                      <select id="ProductSelctor" name="pname"></select>
                  </div>


                  <div>
                      <input type="submit" value="See Details" />
                  </div>
                  </form>
</font>
        </div>
    
</body>