@{
    ViewBag.Title = "updateProduct";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
@model List<Project_1.Models.Product>
<div class="content">
      <div class="container">
        <div class="page-header">
          <h1><font color="lightblue">Update Product</font></h1>
        </div>
        <div class="row">
          <div class="span6 offset3">
            <h4 class="widget-header"><font color="blue">Please Update Product Detail</h4>
            <div class="widget-body">
              <div class="center-align">
                <form class="form-horizontal" action="/Product/doneUpdate" method="post">
                    <input type="hidden" name="Id" value="@Model[0].Id" />
                    <input type="hidden" name="ProductImage" value="@Model[0].ProductImage" />
                    <div class="form-group">
                 <label  class="col-sm-2 control-label" for="textinput"><font color="lightblue" size="3">Name:</label>

                 <input type="text" name="ProductName" placeholder="Product Name" required="required" value="@Model[0].ProductName"></br>
                    </div>
                     <div class="form-group">
                    <label  class="col-sm-2 control-label" for="textinput"><font color="lightblue" size="3">Price:</label>

                 <input type="text" name="ProductPrice" placeholder="Price" required="required" value="@Model[0].ProductPrice"></br>
                        </div>
                     <div class="form-group">
                    <label  class="col-sm-2 control-label" for="textinput"><font color="lightblue" size="3">Catagory:</label>

                 <input type="text" name="ProductCatagery" placeholder="Catagory" required="required" value="@Model[0].ProductCatagery"></br>
                         </div>
                     <div class="form-group">
         <label  class="col-sm-2 control-label" for="textinput"><font color="lightblue" size="3">Product Image:</label>
        <input type="file" value="@Model[0].ProductImage" name="image"/></br>
          </div>
                    <div class="pull-right">
                  <input type="submit" value="Update" class="btn btn-primary btn-large" name="ProductImage"></div>
                </form>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

